{{> nav}}

<div class="user_info_container">
    <div class="left">
        <a class="username">{{user.name}}</a>
        {{!-- <form action="/user/edit_profile_picture" method="post" enctype="multipart/form-data">
            <input type="file" name="photo" />
            <button type="submit">Save</button>
        </form> --}}
        <br>

        {{!-- IF STUDENT --}}
        {{#equal usertype 0}}
            <a class="left_a"> Major: {{user.major}} </a>
        {{/equal}}

        {{!-- IF PROFESSOR --}}
        {{#equal usertype 1}}
            <a class="left_a"> Department: {{user.department}} </a>
        {{/equal}}

        {{!-- IF INDUSTRY aka NPO, ERG, RECRUITER --}}
        {{#equal usertype 2}}
            <a class="left_a"> Company: {{user.company}} </a>
        {{/equal}}

        <a class="left_a"> Email: {{user.email}} </a>
        <br>
        <br>

        {{!-- IF STUDENT --}}
        About Me
        <button type="button" id="editBioButton" style="float: right;">Edit Bio</button>
        <div class="description">
            <p id="current_bio" style="display: flex;">{{user.bio}}</p>
            <form action="/user/savebio" id="bioForm" method="POST">
                <input type="text" id="bio_textfield" placeholder="{{user.bio}}" name="bio" style="display: none;">
                <button type="submit" id="button" style="float: right;display: none;">Save</button>
            </form>

            {{!-- ONLY FOR STUDENTS --}}
            {{#equal usertype 0}}
            <div class="rating">
                <a href="#5" titele="Give 5 stars">★</a>
                <a href="#4" title="Give 4 stars">★</a>
                <a href="#3" title="Give 3 stars">★</a>
                <a href="#2" title="Give 2 stars">★</a>
                <a href="#1" title="Give 1 star">★</a>
            </div>
            {{/equal}}
        </div>
        <br>
    </div>

    {{!-- IF STUDENT --}}
    <div class="resume_container">
        <div class="right_userinfo">
            <div class="user_image">
                <img id="pfp" src="{{user.profilepic}}" width="250px"></img>
            </div>
            <div class="username_info">
                <a id="username_info">{{user.username}}</a>
            </div>
            <div class="boxes">
                <ul class="list_boxes">
                    {{#equal usertype 0}}
                        <li><a href="/resume/{{user.id}}">Resume</a></li>
                        <li><a href="/post/{{user.id}}">Reviews</a></li>
                    {{/equal}}
                    {{#if authpage}}
                    <li><a href="/user/{{user.username}}/settings">Edit Settings</a></li>
                    <li><a href="/">Messages</a></li>
                    {{/if}}

                </ul>
            </div>
        </div>
    </div>

</div>

